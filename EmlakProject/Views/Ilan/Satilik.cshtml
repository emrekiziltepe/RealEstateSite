
@{
    ViewBag.Title = "Satılık İlanlar";
}
@model IEnumerable<EmlakProject.Models.TumIlanBilgileri>

<section style="background-image: url(&quot;/Content/ecoverde/images/bg_1.jpg&quot;);" data-stellar-background-ratio="0.5">
    <section class="hero-wrap hero-wrap-2" style="background-image: url(&quot;images/bg_1.jpg&quot;); background-position: 50% 0px;" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" style="height: 722px;">
                <div class="col-md-9 ftco-animate pb-0 text-center fadeInUp ftco-animated">
                    <p class="breadcrumbs"><span class="mr-2"><a href="/Home/Index">AnaSayfa <i class="fa fa-chevron-right"></i></a></span> <span>Satılık Ilanlar<i class="fa fa-chevron-right"></i></span></p>
                    <h1 class="mb-3 bread">Satılık İlanlar</h1>
                </div>
            </div>
        </div>
    </section>

    <section class="ftco-section ftco-no-pb ftco-no-pt">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="search-wrap-1 ftco-animate p-4 fadeInUp ftco-animated">
                        <form action="/Ilan/Satilik/" method="post" class="search-property-1">
                            <div class="row">
                                <div class="col-lg align-items-end">
                                    <div class="form-group">
                                        <label for="#">İl</label>
                                        <div class="form-field">
                                            <div class="select-wrap">
                                                <div class="icon"><span class="fa fa-chevron-down"></span></div>
                                                <select name="adres.adresIlID" class="form-control">
                                                    @foreach (var item in ViewBag.iller)
                                                    {
                                                        <option value="@item.ilID" style="color:black;">@item.ilAdi</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg align-items-end">
                                    <div class="form-group">
                                        <label for="#">İlçe</label>
                                        <div class="form-field">
                                            <div class="select-wrap">
                                                <div class="icon"><span class="fa fa-chevron-down"></span></div>
                                                <select name="adres.adresIlceID" class="form-control">
                                                    @foreach (var item in ViewBag.ilceler)
                                                    {
                                                        <option value="@item.ilceID" style="color:black;">@item.ilceAdi</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg align-items-end">
                                    <div class="form-group">
                                        <label for="#">Mahalle</label>
                                        <div class="form-field">
                                            <div class="select-wrap">
                                                <div class="icon"><span class="fa fa-chevron-down"></span></div>
                                                <select name="adres.adresMahalleID" class="form-control">
                                                    @foreach (var item in ViewBag.mahalleler)
                                                    {
                                                        <option value="@item.mahalleID" style="color:black;">@item.mahalleAdi</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg align-items-end">
                                    <div class="form-group">
                                        <label for="#">Konut Tipi</label>
                                        <div class="form-field">
                                            <div class="select-wrap">
                                                <div class="icon"><span class="fa fa-chevron-down"></span></div>
                                                <select name="ilan.ilanKonutTuruID" class="form-control">
                                                    @foreach (var item in ViewBag.konutTurleri)
                                                    {
                                                        <option value="@item.konutTuruID" style="color:black;">@item.konutTuru</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg align-items-end">
                                    <div class="form-group">
                                        <label for="#">Oda Sayısı</label>
                                        <div class="form-field">
                                            <div class="select-wrap">
                                                <div class="icon"><span class="fa fa-chevron-down"></span></div>
                                                <select name="ilan.ilanOdaSayisi" class="form-control">
                                                    <option value="1" style="color:black;">1</option>
                                                    <option value="2" style="color:black;">2</option>
                                                    <option value="3" style="color:black;">3</option>
                                                    <option value="4" style="color:black;">4</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg align-items-end">
                                    <div class="form-group">
                                        <label for="#">Max Fiyat</label>
                                        <div class="form-field">
                                            <div class="icon"><span class="fa fa-search"></span></div>
                                            <input name="ilan.ilanFiyat" type="number" class="form-control" placeholder="Max Fiyat">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg align-self-end">
                                    <div class="form-group">
                                        <div class="form-field">
                                            <input type="submit" value="Ara" class="form-control btn btn-primary">
                                        </div>
                                    </div>
                                </div>
                                <input type="hidden" name="ilan.ilanTuruID" value="2" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="ftco-section goto-here">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="property-wrap ftco-animate fadeInUp ftco-animated">
                            <a class="img" style="background-image: url(/Images/@item.resim.resimAdi);">
                                <div class="rent-sale">
                                    <span class="sale">@item.ilanTur.ilanTuru</span>
                                </div>
                                <p class="price"><span class="orig-price">@item.ilan.ilanFiyat TL</span></p>
                            </a>
                            <div class="text">
                                <ul class="property_list">
                                    <li><span class="flaticon-home">@item.konutTur.konutTuru</span></li>
                                    <li><span class="flaticon-floor-plan"></span>@item.ilan.ilanM2 Metrekare</li>
                                </ul>
                                <ul class="property-list">
                                    <li><span class="flaticon-bed"></span>@item.ilan.ilanOdaSayisi + @item.ilan.ilanSalonSayisi</li>
                                    <li><span class="flaticon-bathtub"></span>@item.ilan.ilanBanyoSayisi Banyo </li>
                                </ul>
                                <h3><a href="/Ilan/IlanDetay/@item.ilan.ilanID" class="btn btn-light" name="@item.ilan.ilanID">@item.ilan.ilanBaslik</a></h3>
                                <span class="location">@item.ils.ilAdi - @item.ilce.ilceAdi - @item.mahal.mahalleAdi</span>
                                <div class="list-team d-flex align-items-center mt-2 pt-2 border-top">
                                    <div class="d-flex align-items-center">
                                        <h3 class="ml-2">Satıcı: @item.uye.uyeAdSoyad</h3>
                                    </div>
                                    <span class="text-right">Yayın Tarihi: @item.ilan.ilanYayinTarihi</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</section>
