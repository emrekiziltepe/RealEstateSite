
@{
    ViewBag.Title = "IlanDetay";
}
@model IEnumerable<EmlakProject.Models.ResimTablosu>

<section class="hero-wrap hero-wrap-2" style="background-image: url(/Content/ecoverde/images/bg_1.jpg&quot;); background-position: 50% 0%;" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" style="height: 722px;">
            <div class="col-md-9 ftco-animate pb-0 text-center fadeInUp ftco-animated">
                <p class="breadcrumbs"><span class="mr-2"><a href="/Home/Index">AnaSayfa <i class="fa fa-chevron-right"></i></a></span> <span class="mr-2"><a href="/Ilan/Satilik">Satılık Ilanlar<i class="fa fa-chevron-right"></i></a></span></p>
                <h1 class="mb-3 bread">İlan Detayı</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-property-details">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        @foreach (var item in Model)
                        {
                            if (item == Model.First())
                            {
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="~/Images/@item.resimAdi" alt="Slide">
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="~/Images/@item.resimAdi" alt="Slide">
                                </div>
                            }
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 pills">
                <div class="bd-example bd-example-tabs">
                    <div class="d-flex">
                        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active show" id="pills-description-tab" data-toggle="pill" href="#pills-description" role="tab" aria-controls="pills-description" aria-expanded="true" aria-selected="true">İlan Detayları</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link show" id="pills-manufacturer-tab" data-toggle="pill" href="#pills-manufacturer" role="tab" aria-controls="pills-manufacturer" aria-expanded="true" aria-selected="false">Açıklama</a>
                            </li>
                        </ul>
                    </div>

                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade active show" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">
                            <div class="row">
                                <div class="col-md-4">
                                    <ul class="features">
                                        <li class="check"><span class="fa fa-check-circle"></span>Konut Tipi: @ViewBag.konut</li>
                                        <li class="check"><span class="fa fa-check-circle"></span>@ViewBag.ilan.ilanM2 Metrekare</li>
                                        <li class="check"><span class="fa fa-check-circle"></span>Yatak Odası Sayısı: @ViewBag.ilan.ilanOdaSayisi</li>
                                        <li class="check"><span class="fa fa-check-circle"></span>Banyo Sayısı: @ViewBag.ilan.ilanBanyoSayisi</li>
                                        <li class="check"><span class="fa fa-check-circle"></span>Salon Sayısı: @ViewBag.ilan.ilanSalonSayisi</li>

                                    </ul>
                                </div>
                                <div class="col-md-4">
                                    <ul class="features">
                                        <li class="check"><span class="fa fa-check-circle"></span>Bina Yaşı: @ViewBag.yas</li>
                                        <li class="check"><span class="fa fa-check-circle"></span>Isınma Tipi: @ViewBag.isi</li>
                                        @if (ViewBag.ilan.ilanEsyaDurumu == 0)
                                        {
                                            <li class="check"><span class="fa fa-check-circle"></span>Eşya Durumu: Eşyasız</li>
                                        }
                                        else if (ViewBag.ilan.ilanEsyaDurumu == 1)
                                        {
                                            <li class="check"><span class="fa fa-check-circle"></span>Eşya Durumu: Eşyalı</li>
                                        }
                                        <li class="check"><span class="fa fa-check-circle"></span>Yayın Tarihi: @ViewBag.ilan.ilanYayinTarihi</li>
                                        <li class="check"><span class="fa fa-check-circle"></span>Satıcı:  @ViewBag.uye</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="pills-manufacturer" role="tabpanel" aria-labelledby="pills-manufacturer-tab">
                            <p>@ViewBag.ilan.ilanAciklama</p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
