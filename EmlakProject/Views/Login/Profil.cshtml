
@{
    ViewBag.Title = "Profil";
}

@using EmlakProject.Models
@model UyeTablosu

<section style="background-image: url(/Content/ecoverde/images/bg_1.jpg);" data-stellar-background-ratio="0.5">
    <section class="ftco-section contact-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 heading-section text-center ftco-animate mb-5 fadeInUp ftco-animated">
                    <span class="subheading">Profil</span>
                    <h2 class="mb-2">Üye Bilgilerini Güncelle</h2>
                </div>
            </div>

            <div class="row block-9 justify-content-center mb-5">
                <div class="col-md-6 mb-md-5">
                    <form action="/Login/Profil/" method="post" role="form" class="bg-light p-5 contact-form">
                        <div class="form-group">
                            <label for="inputUsername" class="col-sm-3 control-label">Ad Soyad</label>
                            <input value="@Model.uyeAdSoyad" autocomplete="off" class="form-control" id="inputUsername" placeholder="Ad Soyad" type="text" name="uyeAdSoyad">
                        </div>
                        <div class="form-group">
                            <label for="inputEmail" class="col-sm-3 control-label">Email</label>
                            <input value="@Model.uyeMail" autocomplete="off" class="form-control" id="inputEmail" placeholder="Email" type="email" name="uyeMail">
                        </div>
                        <div class="form-group">
                            <label for="inputPassword" class="col-sm-3 control-label">Şifre</label>
                            <input value="@Model.uyeSifre" autocomplete="off" class="form-control" id="inpu-demo-a" placeholder="Şifre" type="text" name="uyeSifre">
                        </div>
                        <input type="hidden" name="uyeTuruID" value="@Model.uyeTuruID" />
                        <input type="hidden" name="uyeID" value="@Model.uyeID" />
                        <button type="submit" class="btn btn-success py-2 px-4 pull-right">Bilgilerimi Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</section>